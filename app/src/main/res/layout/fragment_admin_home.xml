<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:columnCount="2"
            app:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="16dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:cardUseCompatPadding="true"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:background="@color/light_blue_600"
                    android:padding="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/ic_baseline_show_chart_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_admin_home_total_sale"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng Doanh thu"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="16dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:cardUseCompatPadding="true"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:background="@color/light_blue_600"
                    android:padding="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/outline_shopping_cart_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_admin_home_total_order"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng đơn đặt hàng"
                        android:textStyle="bold"
                        android:textSize="11sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="16dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:cardUseCompatPadding="true"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:background="@color/light_blue_600"
                    android:padding="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/ic_baseline_pending_actions_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_admin_home_pending_order"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn đang đặt"
                        android:textStyle="bold"
                        android:textSize="10sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="16dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:cardUseCompatPadding="true"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:background="@color/light_blue_600"
                    android:padding="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/ic_baseline_today_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_admin_home_today_order"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số đơn hôm nay"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Tổng quan"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/admin_chart_total_sale"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Top Sản phẩm"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_home_top_product_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"/>




    </LinearLayout>
</ScrollView>